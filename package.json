{
  "name": "tabtab",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.5.2",
  "description": "Chrome extension for tab management",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:release": "tsc && vite build",
    "build:debug": "tsc && vite build --mode debug",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,html,css}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,json,html,css}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.315",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.2"
  }
}
