{
    "manifest_version": 3,
    "name": "Tab Grouper",
    "version": "1.0",
    "description": "Groups open tabs by host",
    "permissions": ["tabs", "tabGroups"],
    "action": {
      "default_popup": "tabtab.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }